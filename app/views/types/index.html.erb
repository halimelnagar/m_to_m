<p id="notice"><%= notice %></p>

<h1>Listing Types</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= link_to 'Show', type, class: "btn btn-xs  btn-primary" %></td>
        <td><%= link_to 'Edit', edit_type_path(type), class: "btn btn-xs  btn-primary" %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs  btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Type', new_type_path, class: "btn btn-xs  btn-primary" %>
