<p id="notice"><%= notice %></p>

<h1>Listing Phases</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sequence</th>
      <th>Phase Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td><%= phase.name %></td>
        <td><%= phase.sequence %></td>
        <td><%= phase.phase_level.name %></td>
        <td><%= link_to 'Show', phase, class: "btn btn-xs  btn-primary" %></td>
        <td><%= link_to 'Edit', edit_phase_path(phase), class: "btn btn-xs  btn-primary" %></td>
        <td><%= link_to 'Destroy', phase, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs  btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phase', new_phase_path, class: "btn btn-xs  btn-primary" %>
