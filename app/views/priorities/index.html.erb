<p id="notice"><%= notice %></p>

<h1>Listing Priorities</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @priorities.each do |priority| %>
      <tr>
        <td><%= priority.name %></td>
        <td><%= link_to 'Show', priority, class: "btn btn-xs  btn-primary" %></td>
        <td><%= link_to 'Edit', edit_priority_path(priority), class: "btn btn-xs  btn-primary" %></td>
        <td><%= link_to 'Destroy', priority, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs  btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Priority', new_priority_path, class: "btn btn-xs  btn-primary" %>
