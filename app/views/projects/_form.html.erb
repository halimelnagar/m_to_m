<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-xs-3">
    <div class="field">
      <%= f.label :smo_id %><br>
      <%= f.text_field :smo_id %>
    </div>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :priority_id %><br>
      <%= f.collection_select :priority_id, Priority.all, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :complexity_id %><br>
      <%= f.collection_select :complexity_id, Complexity.all, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :type_id %><br>
      <%= f.collection_select :type_id, Type.all, :id, :name %>
    </div>
    <div class="actions">
      <%= f.submit  class: "btn btn-xs  btn-success" %>
    </div>
  </div>
  
  <div class="col-xs-3">
    <div class="field">
      <%= f.label "Impacted Systems" %><br />
      <%= f.collection_check_boxes :system_ids, System.all, :id, :name do |s| %>
        <div class="collection-check-box">
          <%= s.check_box %>
          <%= s.label %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="col-xs-3">
    <div class="field">
      <%= f.label "Phases" %><br />
      <%= f.collection_check_boxes :phase_ids, Phase.all, :id, :name do |p| %>
        <div class="collection-check-box">
          <%= p.check_box %>
          <%= p.label %>
        </div>
      <% end %>
    </div>  
  </div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-xs  btn-success" %>
  </div>
<% end %>
