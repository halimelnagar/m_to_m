<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-lg-12">
  <div class="col-xs-4 well v-well">
    <div class="field form-group">
      <%= f.label :smo_id, class: 'control-label' %>
      <%= f.text_field :smo_id, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control"  %>
    </div>
    <div class="field form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control"  %>
    </div>

    <div class="field form-group">
      <%= f.label :priority_id, class: 'control-label' %><br/>
      <%= f.collection_select :priority_id, Priority.all, :id, :name, class: 'dropdown-menu'  %>
    </div>

    <div class="field form-group">
      <%= f.label :complexity_id %><br/>
      <%= f.collection_select :complexity_id, Complexity.all, :id, :name, {class: "dropdown-menu"}  %>
    </div>

    <div class="field form-group">
      <%= f.label :type_id %><br/>
      <%= f.collection_select :type_id, Type.all, :id, :name, {class: "dropdown-menu"}  %>
    </div>
    <div class="actions form-group">
      <%= f.submit  class: "btn btn-xs  btn-success" %>
    </div>
  </div>
  
  <div class="col-xs-3 well v-well left-margin">
    <div class="field form-group left-padding">
      <%= f.label "Impacted Systems" %>
      <%= f.collection_check_boxes :system_ids, System.all, :id, :name do |s|  %>
        <div class="checkbox">
          <%= s.check_box %>
          <%= s.label %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="col-xs-3 form-group  well v-well left-margin ">
    <div class="field form-group left-padding">
      <%= f.label "Phases" %>
      <%= f.collection_check_boxes :phase_ids, Phase.all, :id, :name do |p| %>
        <div class="checkbox">
          <%= p.check_box %>
          <%= p.label %>
        </div>
      <% end %>
    </div>
  </div> 
  
  <div class="actions col-xs-1 left-margin">
    <%= f.submit class: "btn btn-xs  btn-success" %>
  </div>

</div>

  

<% end %>
