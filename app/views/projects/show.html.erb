<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
	<h1>Impacted</h1>
	<% @project.systems.each do |i| %>
	<ul>
	 <li>
	   <%= i.name %>         
	 </li>
	</ul>
	<% end %>
</p>

<p>
	<% if @project.tasks.any? %>
		<h1>Tasks</h1>
		<% @project.tasks.each do |t| %>
		<ul>
		 <li>
		 	<%= check_box_tag "Status",t.id,t.status%>
		   <%= t.name %>         
		 </li>
		</ul>
		<% end %>
	<% end %>
</p>

<div class="field">
	<% if @project.phases.order('sequence').any? %>
		<h2>Phases</h2>
		<% @project.phases.each do |t| %>
		<ul>
		 <li>
		 	
		   <%= t.name %>         
		 </li>
		</ul>
		<% end %>
	<% end %>
</div>

 
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
