<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @system.name %>
</p>

<p>
  <% if @system.teams.any? %>
    <h1>Teams</h1>
    <% @system.teams.each do |t| %>
    <ul>
      <li><%= t.name %></li>
    </ul>
       
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_system_path(@system), class: "btn btn-xs  btn-primary" %> |
<%= link_to 'Back', systems_path, class: "btn btn-xs  btn-primary" %>
